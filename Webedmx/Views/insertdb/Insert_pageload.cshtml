@model Webedmx.Models.insercls
@{
    ViewBag.Title = "Insert_pageload";
}

<h2>User Registration</h2>
<div>
    @using (Html.BeginForm("Insert_click", "insertdb", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div>
            <label>Name</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.name)
            @Html.ValidationMessageFor(m => m.name)
        </div>
        <div>
            <label>Age</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.age)
            @Html.ValidationMessageFor(m => m.name)
        </div>
        <div>
            <label>Address</label>
        </div>
        <div>
            @Html.TextAreaFor(m => m.address)
            @Html.ValidationMessageFor(m => m.address)
        </div>
        <div>
            <label>Email</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.email)
            @Html.ValidationMessageFor(m => m.email)
        </div>
        <div>
            <label>Photo</label>
        </div>
        <div>
            @Html.TextBox("file", "", new { type = "file" })
        </div>
        <div>
            Male
            @Html.RadioButtonFor(m => m.gender, "Male")
            Female
            @Html.RadioButtonFor(m => m.gender, "Female")
        </div>
        <div>
            <label>States</label>
        </div>
        <div>
            @Html.DropDownList("selstates", (SelectList)ViewBag.SelectList, "--select--", new { @class = "form-control" })
        </div>
        <div>
            <label>Qulafifcation</label>
        </div>
        <div>
            @foreach (var item in Model.myfavoritequal)
            {
                <label>
                    <input type="checkbox" value="@item.value" checked="@item.ischecked" name="selectedqual" id="@item.value" />@Html.Raw(item.text)
                </label>
            }
        </div>
        <div>
            <label>Username</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.username)
            @Html.ValidationMessageFor(m => m.username)
        </div>
        <div>
            <label>Password</label>
        </div>
        <div>
            @Html.PasswordFor(m => m.pwd)
        </div>
        <div>
            <label>Confirm Password</label>
        </div>
        <div>
            @Html.PasswordFor(m => m.cpassword)
            @Html.ValidationMessageFor(m => m.cpassword)
        </div>
        <div>
            <input type="submit" value="Insert" />
            @Html.DisplayFor(m => m.msg)
        </div>


    }


</div>

